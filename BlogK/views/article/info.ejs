<%- include('../common/header.ejs') %>

<div class="container">
    <h1 class="text-center">
        <%= article.title %>
        <!--只有登录，且登录人的Id和文章作者Id相同，才应该展示编辑按钮-->
        <% if(islogin && user.id === article.authorId){ %>
        <a href="/article/edit/<%= article.id %>" class="btn btn-info pull-right">编辑</a>
        <% } %>
    </h1>
    <hr>

    <div><%- article.content %></div>
</div>

